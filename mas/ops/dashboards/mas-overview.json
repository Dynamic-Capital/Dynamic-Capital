{
  "__inputs": [],
  "title": "Dynamic MAS Overview",
  "timezone": "UTC",
  "panels": [
    {
      "id": 1,
      "title": "Agent Latency p95",
      "type": "timeseries",
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "unit": "ms"
        }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(agent_latency_bucket[5m])) by (agent, le))",
          "legendFormat": "{{agent}}"
        }
      ]
    },
    {
      "id": 2,
      "title": "DLQ Rate",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(kafka_dlq_messages_total[5m])) by (topic)",
          "legendFormat": "{{topic}}"
        }
      ]
    },
    {
      "id": 3,
      "title": "HALT State",
      "type": "stat",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "max(system_halt_state)"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {
                  "text": "RUNNING",
                  "color": "green"
                },
                "1": {
                  "text": "HALT",
                  "color": "red"
                }
              }
            }
          ]
        }
      }
    }
  ],
  "templating": {
    "list": []
  },
  "time": {
    "from": "now-6h",
    "to": "now"
  }
}
