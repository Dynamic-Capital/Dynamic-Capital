{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dynamic.capital/schemas/portfolio.intent.allocate.v1.json",
  "title": "Portfolio Allocation Intent v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["envelope", "payload"],
  "properties": {
    "envelope": {"$ref": "./envelope.v1.json"},
    "payload": {
      "type": "object",
      "required": [
        "symbol",
        "target_size",
        "current_size",
        "confidence",
        "risk_score",
        "idempotency_key"
      ],
      "additionalProperties": false,
      "properties": {
        "symbol": {
          "type": "string",
          "pattern": "^[A-Z0-9_.-]{1,20}$"
        },
        "target_size": {
          "type": "number",
          "description": "Desired position size in notional units"
        },
        "current_size": {
          "type": "number",
          "description": "Current portfolio exposure"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "risk_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "utility": {
          "type": "number",
          "description": "Computed utility for audit trail"
        },
        "constraints": {
          "type": "object",
          "description": "Constraint evaluations",
          "properties": {
            "leverage": {"type": "number"},
            "var": {"type": "number"},
            "liquidity_tier": {"type": "string"}
          },
          "additionalProperties": false
        },
        "idempotency_key": {
          "type": "string",
          "minLength": 16,
          "maxLength": 64
        },
        "ttl_ms": {
          "type": "integer",
          "minimum": 1000,
          "maximum": 600000
        }
      }
    }
  }
}
