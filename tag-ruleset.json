{
  "name": "Protect semver tags",
  "target": "tag",
  "enforcement": "active",
  "conditions": {
    "ref_name": { "include": ["refs/tags/v*"] }
  },
  "rules": [
    { "type": "creation" },
    { "type": "update" },
    { "type": "deletion" }
  ],
  "bypass_actors": [
    {
      "actor_type": "RepositoryRole",
      "repository_role_name": "admin",
      "bypass_mode": "always"
    }
  ]
}
